<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.arrg.app.uapplock.view.activity.IntroActivity">

    <com.arrg.app.uapplock.view.ui.LockableViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark">

        <net.steamcrafted.materialiconlib.MaterialIconView
            android:id="@+id/btnPrevious"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@drawable/button_bar_background"
            android:clickable="true"
            android:scaleType="center"
            app:materialIcon="chevron_left"
            app:materialIconColor="@color/colorAccent"
            app:materialIconSize="24dp" />

        <com.commit451.inkpageindicator.InkPageIndicator
            android:id="@+id/inkPageIndicator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:animationDuration="250"
            app:currentPageIndicatorColor="@color/wet_asphalt75"
            app:dotDiameter="10dp"
            app:dotGap="10dp"
            app:pageIndicatorColor="@color/wet_asphalt50" />

        <net.steamcrafted.materialiconlib.MaterialIconView
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:background="@drawable/button_bar_background"
            android:clickable="true"
            android:scaleType="center"
            app:materialIcon="chevron_right"
            app:materialIconColor="@color/colorAccent"
            app:materialIconSize="24dp" />
    </LinearLayout>
</LinearLayout>
